<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap-css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="bs-docs-section clearfix">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">
                        <h1 id="navbar">Stock Management System</h1>
                    </div>
                    <div class="bs-component">
                        <div class="navbar navbar-default">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <div class="navbar-brand">@Html.ActionLink("Home", "Index", "Home")</div>
                            </div>
                            <div class="navbar-collapse collapse navbar-responsive-collapse">
                                <ul class="nav navbar-nav">
                                    <li class="active">@Html.ActionLink("Manage Stock", "Index", "Stock")</li>
                                    <li>@Html.ActionLink("Manage Warehouse", "Index", "Warehouse")</li>
                                    <li>@Html.ActionLink("Manage Product", "Index", "Product")</li>
                                    <li>@Html.ActionLink("Available Stock Report", "Report", "Stock")</li>
                                </ul>
                            </div>
                        </div>
                        <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <footer class="navbar-fixed-bottom" style="background-color: #222222; color: white;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-3">
                        <div class="col-lg-9">
                            <p>Akekawee (Oak) Kulkanjanavon.</p>
                            <p>E-mail: <a href="k_kulkanjanavon@hotmail.com">k_kulkanjanavon@hotmail.com</a>.</p>
                            <p>Mob: 0422-834-321</p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

