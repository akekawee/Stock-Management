@model IEnumerable<StockManagementSystem.Models.warehouse>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                Warehouse ID
            </th>
            <th>
                Warehouse Name
            </th>
            <th>
                Warehouse Type
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.warehouse_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.warehouse_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.type_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.warehouse_id }) |
            @Html.ActionLink("Details", "Details", new { id = item.warehouse_id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.warehouse_id })
            </td>
        </tr>
    }

</table>
